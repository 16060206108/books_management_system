              //      | &nbsp;&nbsp;<span class="pmd-radio">学生证</span>
            .pmd-card-actions
              button.btn.pmd-btn-outline.pmd-ripple-effect.btn-primary(type="submit") 提交
              button.btn.pmd-btn-raised.pmd-ripple-effect.btn-primary 取消
